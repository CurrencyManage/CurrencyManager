<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:TriangleView="http://schemas.android.com/tools"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:background="@color/color_head">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="交易"
            android:textColor="@color/tv_white"
            android:textSize="@dimen/text_size_18" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <LinearLayout
        android:id="@+id/layout_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:background="@color/color_head"
        android:orientation="horizontal">

        <TextView
            style="@style/style_text_blue_bg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="买入" />

        <TextView
            style="@style/style_text_blue_bg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="卖出" />

        <TextView
            style="@style/style_text_blue_bg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="撤单" />

        <TextView
            style="@style/style_text_blue_bg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="委托" />

        <TextView
            style="@style/style_text_blue_bg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="持仓" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_index"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#191B25"
        android:orientation="horizontal">

        <com.hb.currencymanage.customview.TriangleView
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            TriangleView:triangle_color="#D02C2F"
            TriangleView:triangle_width="8dp" />

        <com.hb.currencymanage.customview.TriangleView
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:visibility="invisible"
            TriangleView:triangle_color="#D02C2F"
            TriangleView:triangle_width="8dp" />

        <com.hb.currencymanage.customview.TriangleView
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:visibility="invisible"
            TriangleView:triangle_color="#D02C2F"
            TriangleView:triangle_width="8dp" />

        <com.hb.currencymanage.customview.TriangleView
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:visibility="invisible"
            TriangleView:triangle_color="#D02C2F"
            TriangleView:triangle_width="8dp" />

        <com.hb.currencymanage.customview.TriangleView
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:visibility="invisible"
            TriangleView:triangle_color="#D02C2F"
            TriangleView:triangle_width="8dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D02C2F" />

    <com.hb.currencymanage.customview.NoSlideViewPager
        android:id="@+id/vpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>