<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hb.currencymanage.ui.activity.MoneyManagementActivity">

    <View
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20"
        android:background="@color/device_bar_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tv_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:background="@color/device_bar_color">

            <RelativeLayout
                android:id="@+id/back"
                android:layout_width="@dimen/dimen_back"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:src="@mipmap/icon_fh" />


            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:text="资金管理"
                android:textColor="@color/tv_white"
                android:textSize="@dimen/text_size_18" />


            <TextView
                android:id="@+id/order"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_normal"
                android:gravity="center_vertical"
                android:text="订单 "
                android:textColor="@color/tv_white" />

        </RelativeLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_50"
            android:src="@mipmap/img_qb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="我的现金"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="1000000.00"
            android:textColor="@color/tv_black"
            android:textSize="@dimen/text_size_18" />


        <LinearLayout
            android:id="@+id/moneyrechargelayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="@drawable/tv_border_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_larger"
                android:text="充值"
                android:textSize="@dimen/text_size_16" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/widthdrawlayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="@drawable/tv_border_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_larger"
                android:text="体现"
                android:textSize="@dimen/text_size_16" />

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/emerygencylayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="@drawable/tv_border_bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_larger"
                android:text="紧急体现"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="60dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_larger"
                android:text="俩小时内到账"
                android:textSize="@dimen/text_size_12" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/tv_dark"></View>


    </LinearLayout>


</LinearLayout>
