<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20"
        android:background="@color/device_bar_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:background="@color/device_bar_color">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="@dimen/dimen_back"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_normal"
                android:src="@mipmap/icon_fh" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="提现"
            android:textColor="@color/tv_white"
            android:textSize="@dimen/text_size_18" />



    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30"
        android:background="@color/tv_dark"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_normal"
        android:text="我的账户:"
        android:textColor="@color/device_bar_color" />

    <LinearLayout
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40"
                android:background="@drawable/tv_border_all"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/margin_larger"
                android:text="姓名" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40"
                android:background="@drawable/tv_border_bottom_and_right_left"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/margin_larger"
                android:text="银行" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40"
                android:background="@drawable/tv_border_bottom_and_right_left"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/margin_larger"
                android:text="开户行支行" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40"
                android:background="@drawable/tv_border_bottom_and_right_left"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/margin_larger"
                android:text="卡号" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40"
                android:background="@drawable/tv_border_top_right_bottoml"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/margin_larger"
                android:text=".."
                 />

            <TextView
                android:id="@+id/tv_bank"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40"
                android:background="@drawable/tv_border_bottom_and_right_whit"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/margin_larger"
                android:text=".."
                />

            <TextView
                android:id="@+id/tv_skKHH"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40"
                android:background="@drawable/tv_border_bottom_and_right_whit"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/margin_larger"
                android:text=".."
                />

            <TextView
                android:id="@+id/tv_skCard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40"
                android:background="@drawable/tv_border_bottom_and_right_whit"
                android:gravity="center_vertical|left"
                android:paddingLeft="@dimen/margin_larger"
                android:text=".."
                />
        </LinearLayout>



    </LinearLayout>





    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:background="@drawable/tv_border_bottom"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_larger"
            android:text="开户行"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_whereitis"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="60dp"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_larger"
            android:text="黑龙江sssssss"
            android:textSize="@dimen/text_size_12" />

    </LinearLayout>



    <LinearLayout
        android:visibility="gone"

        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:background="@drawable/tv_border_bottom"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_larger"
            android:text="卡号"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_bankcard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="60dp"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_larger"
            android:text="1112134324324234"
            android:textSize="@dimen/text_size_12" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginTop="@dimen/margin_normal"
        android:background="@drawable/tv_border_bottom"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="60dp"
            android:layout_weight="4"
            android:background="@null"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_larger"
            android:hint="输入提现金额"
            android:textSize="@dimen/text_size_12" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_larger"
        android:text="手续费2%,最低充值100元"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/withDraw"
        android:layout_width="200dp"
        android:layout_height="@dimen/dimen_40"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_40"
        android:background="@color/device_bar_color"
        android:gravity="center"
        android:text="提现"
        android:textColor="@color/tv_white" />


</LinearLayout>
