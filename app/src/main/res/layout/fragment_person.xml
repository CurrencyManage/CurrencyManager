<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

      <ScrollView
          android:layout_width="match_parent"
          android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                  <FrameLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">

                        <RelativeLayout
                            android:background="@mipmap/img_background_cz"
                            android:layout_width="match_parent"
                            android:layout_height="230dp">

                              <ImageView
                                  android:layout_marginTop="20dp"
                                  android:layout_marginRight="30dp"
                                  android:layout_alignParentRight="true"
                                  android:src="@mipmap/icon_sz"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content" />

                              <LinearLayout
                                  android:orientation="horizontal"
                                  android:layout_centerInParent="true"
                                  android:layout_width="wrap_content"
                                  android:layout_height="60dp">


                                    <de.hdodenhof.circleimageview.CircleImageView
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:id="@+id/profile_image"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:src="@mipmap/img_tx_gezx"
                                        app:civ_border_width="2dp"
                                        app:civ_border_color="#FF000000"/>

                                    <TextView
                                        android:layout_marginLeft="20dp"
                                        android:gravity="center"
                                        android:text="ID 1122324324"
                                        android:textColor="@color/tv_white"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent" />

                              </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:visibility="gone"
                            android:layout_marginTop="150dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/tv_border_radius"
                            android:layout_width="match_parent"
                            android:layout_height="100dp">

                        </RelativeLayout>

                        <android.support.v7.widget.CardView
                            android:layout_marginBottom="30dp"
                            app:contentPadding="5dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_marginTop="160dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp">

                              <LinearLayout
                                  android:orientation="vertical"
                                  android:layout_width="match_parent"
                                  android:layout_height="match_parent">

                                    <TextView
                                        android:layout_marginTop="4dp"
                                        android:layout_marginLeft="30dp"
                                        android:text="总资产(元) :"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />
                                    <TextView
                                        android:gravity="center"
                                        android:layout_marginTop="20dp"
                                        android:text="12300000.00"
                                        android:textColor="@color/tv_black"
                                        android:textSize="@dimen/margin_larger"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />

                                    <LinearLayout
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                          <TextView
                                              android:gravity="center"
                                              android:text="本月收益：13232"
                                              android:layout_width="0dp"
                                              android:layout_weight="1"
                                              android:layout_height="match_parent" />

                                          <View

                                              android:background="@color/tv_dark"
                                              android:layout_width="0dp"
                                              android:layout_weight="0.01"
                                              android:layout_height="20dp"></View>

                                          <TextView
                                              android:gravity="center"
                                              android:text="今日收益：214324"
                                              android:layout_width="0dp"
                                              android:layout_weight="1"
                                              android:layout_height="match_parent" />

                                    </LinearLayout>

                              </LinearLayout>


                        </android.support.v7.widget.CardView>

                  </FrameLayout>


                  <LinearLayout
                      android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_50">

                              <TextView
                                  android:text="现金"
                                  android:gravity="center"
                                  android:layout_marginLeft="40dp"
                                  android:layout_width="wrap_content"
                                  android:layout_height="match_parent" />

                              <TextView
                                  android:text="4352000"
                                  android:gravity="center"
                                  android:layout_marginLeft="60dp"
                                  android:layout_width="wrap_content"
                                  android:layout_height="match_parent" />

                        </LinearLayout>
                        <View
                            android:background="@color/tv_dark"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"></View>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_50">

                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="match_parent"
                                  android:layout_marginLeft="40dp"
                                  android:gravity="center"
                                  android:text="持仓" />

                              <TextView
                                  android:text="4352000"
                                  android:gravity="center"
                                  android:layout_marginLeft="60dp"
                                  android:layout_width="wrap_content"
                                  android:layout_height="match_parent" />

                        </LinearLayout>
                        <View
                            android:background="@color/tv_dark"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"></View>


                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_50">

                              <TextView
                                  android:text="产能"
                                  android:gravity="center"
                                  android:layout_marginLeft="40dp"
                                  android:layout_width="wrap_content"
                                  android:layout_height="match_parent" />

                              <TextView
                                  android:text="4352000"
                                  android:gravity="center"
                                  android:layout_marginLeft="60dp"
                                  android:layout_width="wrap_content"
                                  android:layout_height="match_parent" />

                        </LinearLayout>
                        <View
                            android:background="@color/tv_dark"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"></View>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_50">

                              <TextView
                                  android:text="杠杆"
                                  android:gravity="center"
                                  android:layout_marginLeft="40dp"
                                  android:layout_width="wrap_content"
                                  android:layout_height="match_parent" />

                              <TextView
                                  android:text="4352000"
                                  android:gravity="center"
                                  android:layout_marginLeft="60dp"
                                  android:layout_width="wrap_content"
                                  android:layout_height="match_parent" />

                        </LinearLayout>
                        <View
                            android:background="@color/tv_dark"
                            android:layout_width="match_parent"
                            android:layout_height="10dp"></View>

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_50">

                              <ImageView
                                  android:layout_marginLeft="40dp"
                                  android:src="@mipmap/icon_wdsb"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content" />

                              <TextView
                                  android:text="我的设备"
                                  android:gravity="center"
                                  android:layout_marginLeft="60dp"
                                  android:layout_width="wrap_content"
                                  android:layout_height="match_parent" />


                        </LinearLayout>


                  </LinearLayout>

            </LinearLayout>

      </ScrollView>





</LinearLayout>
