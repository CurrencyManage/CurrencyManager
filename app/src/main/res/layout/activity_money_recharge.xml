<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hb.currencymanage.ui.activity.MoneyRechargeActivity">

    <View
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20"
        android:background="@color/device_bar_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:background="@color/device_bar_color">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="@dimen/dimen_back"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_normal"
                android:src="@mipmap/icon_fh" />


        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="充值"
            android:textColor="@color/tv_white"
            android:textSize="@dimen/text_size_18" />



    </RelativeLayout>


    <TextView
        android:text="我的账户:"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_normal"
        android:textColor="@color/device_bar_color"
        android:background="@color/tv_dark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30" />



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/tv_border_bottom"
        android:layout_height="@dimen/dimen_40">

        <TextView
            android:text="开户行"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_larger"
            android:textSize="@dimen/text_size_16"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_whereitis"
            android:layout_marginRight="60dp"
            android:text="黑龙江sssssss"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_larger"
            android:textSize="@dimen/text_size_12"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/tv_border_bottom"
        android:layout_height="@dimen/dimen_40">

        <TextView
            android:text="卡号"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_larger"
            android:textSize="@dimen/text_size_16"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_bankcard"
            android:layout_marginRight="60dp"
            android:text="1112134324324234"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_larger"
            android:textSize="@dimen/text_size_12"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_normal"
        android:background="@drawable/tv_border_bottom"
        android:layout_height="@dimen/dimen_40">

        <TextView
            android:text="充值金额"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_larger"
            android:textSize="@dimen/text_size_16"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/et_money"
            android:background="@null"
            android:layout_marginRight="60dp"
            android:hint="输入充值金额"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_larger"
            android:textSize="@dimen/text_size_12"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_recharge"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_40"
        android:text="充值"
        android:background="@color/device_bar_color"
        android:layout_width="200dp"
        android:textColor="@color/tv_white"
        android:layout_height="@dimen/dimen_40" />


</LinearLayout>
