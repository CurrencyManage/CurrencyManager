<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20"
        android:background="@color/device_bar_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:background="@color/device_bar_color">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="@dimen/dimen_back"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_normal"
                android:src="@mipmap/icon_fh" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="设置"
            android:textColor="@color/tv_white"
            android:textSize="@dimen/text_size_18" />
    </RelativeLayout>


    <RelativeLayout
        android:background="@drawable/tv_border_bottom"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_below="@+id/logo"
            android:text="V1.2.3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/question_layout"
        android:gravity="center_vertical"
        android:background="@drawable/tv_border_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50">

        <TextView
            android:layout_marginLeft="@dimen/margin_larger"
            android:text="常见问题"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/about_layout"
        android:gravity="center_vertical"
        android:background="@drawable/tv_border_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50">

        <TextView
            android:layout_marginLeft="@dimen/margin_larger"
            android:text="关于我们"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>


    <TextView
        android:id="@+id/tv_login_out"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_40"
        android:text="退出登录"
        android:background="@color/device_bar_color"
        android:layout_width="200dp"
        android:textColor="@color/tv_white"
        android:layout_height="@dimen/dimen_40" />




</LinearLayout>
