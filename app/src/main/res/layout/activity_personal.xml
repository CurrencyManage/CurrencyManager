<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:background="@color/device_bar_color">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="@dimen/dimen_back"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_normal"
                android:src="@mipmap/icon_fh" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="个人信息 "
            android:textColor="@color/tv_white"
            android:textSize="@dimen/text_size_18" />

    </RelativeLayout>


    <RelativeLayout
        android:background="@drawable/tv_border_bottom"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/head"
            android:layout_centerInParent="true"
            android:src="@mipmap/img_tx_gezx"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:layout_below="@+id/head"
            android:text="修改头像"
            android:gravity="center"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/tab_unselect_color"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <RelativeLayout
        android:gravity="center_vertical"
        android:background="@drawable/tv_border_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40">

        <TextView
            android:layout_marginLeft="@dimen/margin_normal"
            android:text="账户ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="100dp"
            android:text="QAS0001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginRight="@dimen/dimen_30"
            android:layout_alignParentRight="true"
            android:text="不可更改"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:gravity="center_vertical"
        android:background="@drawable/tv_border_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40">

        <TextView
            android:layout_marginLeft="@dimen/margin_normal"
            android:text="真实姓名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="100dp"
            android:text="QAS0001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginRight="@dimen/dimen_30"
            android:layout_alignParentRight="true"
            android:text="不可更改"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <RelativeLayout
        android:gravity="center_vertical"
        android:background="@drawable/tv_border_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40">

        <TextView
            android:layout_marginLeft="@dimen/margin_normal"
            android:text="身份证号码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="100dp"
            android:text="QAS0001"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginRight="@dimen/dimen_30"
            android:layout_alignParentRight="true"
            android:text="不可更改"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <RelativeLayout
        android:gravity="center_vertical"
        android:background="@drawable/tv_border_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40">

        <TextView
            android:layout_marginLeft="@dimen/margin_normal"
            android:text="联系方式"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="100dp"
            android:text="12312341234"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bank_layout"
        android:gravity="center_vertical"
        android:background="@drawable/tv_border_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40">

        <TextView
            android:layout_marginLeft="@dimen/margin_normal"
            android:text="银行类信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/recommend_layout"
        android:gravity="center_vertical"
        android:background="@drawable/tv_border_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40">

        <TextView
            android:layout_marginLeft="@dimen/margin_normal"
            android:text="推荐人信息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="100dp"
            android:text="张明月"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>








</LinearLayout>
