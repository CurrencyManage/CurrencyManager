                android:background="@drawable/tv_border_radius"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_40"
                android:layout_weight="7">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
