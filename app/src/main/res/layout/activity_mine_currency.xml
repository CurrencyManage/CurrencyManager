<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/tv_white"
    >

    <View
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20"
        android:background="@color/head_red" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:background="@color/head_red">

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="@dimen/dimen_back"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_normal"
                android:src="@mipmap/icon_fh" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="我的资产"
            android:textColor="@color/tv_white"
            android:textSize="@dimen/text_size_18" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/head_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center_vertical"
            android:textColor="@color/tv_white"
            android:paddingLeft="@dimen/dimen_50"
            android:text="实时收益(元)"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40" />

        <TextView
            android:id="@+id/tv_income"
            android:textSize="@dimen/text_size_20"
            android:gravity="center_horizontal"
            android:textColor="@color/tv_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40" />


        <TextView
            android:id="@+id/tv_income_percent"
            android:gravity="center_vertical"
            android:textColor="@color/tv_white"
            android:paddingLeft="@dimen/dimen_30"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40" />

        <View
            android:layout_marginRight="@dimen/dimen_30"
            android:layout_marginLeft="@dimen/dimen_30"
            android:background="@color/tv_white"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>

        <LinearLayout
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginLeft="@dimen/dimen_30"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30">

            <TextView
                android:gravity="center_vertical"
                android:textColor="@color/tv_white"
                android:text="总市值"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_total_money"
                android:gravity="center_vertical"
                android:textColor="@color/tv_white"
                android:layout_marginLeft="60dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>


        <LinearLayout
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginLeft="@dimen/dimen_30"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30">

            <TextView
                android:gravity="center_vertical"
                android:textColor="@color/tv_white"
                android:text="总盈亏"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_total_profit_loss"
                android:gravity="center_vertical"
                android:textColor="@color/tv_white"
                android:layout_marginLeft="60dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_larger"
        android:layout_marginRight="@dimen/margin_larger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/tv_border_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50">
            <TextView
                android:gravity="center"
                android:text="HK"
                android:textColor="@color/tv_black"
                android:textSize="@dimen/text_size_16"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50">
            <TextView
                android:textSize="@dimen/text_size_18"
                android:id="@+id/tv_currency_total_profit_loss1B"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_profitAndLoss"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50">
            <TextView
                android:gravity="center"
                android:text="市价"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_currency_market_price"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <TextView
                android:gravity="center"
                android:text="持仓数"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_currency_hold_count"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50">
            <TextView
                android:gravity="center"
                android:text="成本"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_currency_cost"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <TextView
                android:gravity="center"
                android:text="可用数"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_currency_available_count"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50">
            <TextView
                android:gravity="center"
                android:text="买入均价"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_currency_buy_avg"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <TextView
                android:gravity="center"
                android:text="市值"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tv_currency_market_value"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
